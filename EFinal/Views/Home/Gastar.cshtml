@{
}

<h2>Registrar un Gasto</h2>


<form method="post" action="/Home/Gastar">
    <div class="form-group">
        <label>Cuenta</label>
        <select name="CuentaId" class="form-control">
            <option value=0>--- Seleccione una Cuenta ---</option>
            @foreach (var item in ViewBag.cuentas)
            {
                <option value="@item.Id"> @item.Nombre </option>            
            }
        </select>
        @Html.ValidationMessage("Cuenta")
    </div>


    <div class="form-group">
        <label>Descripcion</label>
        <input name="Descripcion" id="Descripcion" class="form-control" />
        @Html.ValidationMessage("Descripcion")
    </div>

    <div class="form-group">
        <label>Monto</label>
        <input name="Monto" id="Monto" class="form-control" type="number"/>
        @Html.ValidationMessage("Monto")
    </div>

    <button class="btn btn-success">Guardar</button>
</form>
